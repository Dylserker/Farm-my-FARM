<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import controller.GameController?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GameController">
    <Label text="Gestion de la Ferme" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Label fx:id="argentLabel" text="Argent: 100 pièces" />
    <Label fx:id="nourritureLabel" text="Nourriture animale: 5" />

    <Button fx:id="planterButton" text="Planter Blé" onAction="#planterCulture" />
    <Button fx:id="acheterVacheButton" text="Acheter Vache (50 pièces)" onAction="#acheterVache" />
    <Button fx:id="nourrirAnimauxButton" text="Nourrir Animaux" onAction="#nourrirAnimaux" />
    <Button fx:id="avancerJourButton" text="Avancer d'un jour" onAction="#avancerJour" />
    <Button fx:id="recolterButton" text="Récolter" />

    <Label text="🌱 Cultures :" />
    <VBox fx:id="cultureList" spacing="5" />

    <Label text="🐄 Animaux :" />
    <VBox fx:id="animalList" spacing="5" />

    <Label fx:id="meteoLabel" text="Météo: Ensoleillé" />

    <Button text="Sauvegarder" onAction="#sauvegarderFerme" />
    <Button text="Charger" onAction="#chargerFerme" />
</VBox>